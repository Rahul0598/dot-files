# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# √ü
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        color_good = "#F9FAF9"
        color_bad = "#F9FAF9"
        color_degraded = "#DC322F"
}

order += "spotify"
#order += "net_rate"
order += "whatismyip"
order += "wireless _first_"
#order += "ethernet _first_"
#order += "cpu_usage"
order += "disk /"
order += "timer"
order += "battery all"
order += "volume master"
#order += "battery_level"
#order += "path_exists VPN"
#order += "external_script"
order += "tztime local"
order += "tztime blore"

spotify {
	format = "(ÔÜº {artist} : {title})"
	format_down = ""
	format_stopped = ""
}

timer {
	format = "ÔÄó:{timer}"
	time = 3600
}

cpu_usage {
        format = " cpu  %usage "
}

disk "/" {
	prefix_type = decimal
	format = " ‚õÅ %percentage_used (U:%used, F:%free) "	
}

diskdata {
	disk = sda2
	prefix_type = decimal
	#format_space = "[\?min_length=5 {value:.2f}]"
	format = " ‚õÅ {used_percent}% (U:{used} GB, F:{free} GB) "
}

external_script {
    format = "{output}"
    script_path = "cat /sys/class/tty/tty0/active"
}

whatismyip {
	format = " üñß {isp}\|{ip}"
	icon_on = "üñß"
	hide_when_offline = True
	url_geo = "http://ip-api.com/json"
}

wireless _first_ {
	# if you use %speed, i3status requires root privileges
        format_up = " Ôá´ %essid (%ip) "
        format_down = ""
}

ethernet _first_ {
	# if you use %speed, i3status requires root privileges
        format_up = " ÔÑâ eth (%ip) "
        format_down = ""
}

net_rate {
	format_value = "[\?min_length=10 {value:.1f} {unit}]"
	si_units = "True"
	format = "{down}‚á£{up}‚á°"
    interfaces_blacklist = "lo"
}

battery all {
        format = " %status %percentage (%remaining) %consumption "
        format_down = "No battery"
        last_full_capacity = true
        integer_battery_capacity = true
        status_chr = "‚ö°"
        status_bat = "ÔâÇ"
        status_unk = "ÔÅô"
        status_full = "ÔâÄ"
        low_threshold = 15
        threshold_type = time
}

tztime local {
        format = "%Y-%m-%d %H:%M"
        #format = " %d/%m %H:%M:%S"
}

tztime blore {
    format = "%Z %H:%M"
    timezone = "Asia/Kolkata"
}

path_exists VPN {
        format = "%title:tun0"
        format_down = ""
        color_good = "#00ff00"
        path = "/sys/class/net/tun0/dev_id"
}

volume master {
    format = "[VOL]: %volume"
    format_muted = "[ Ôá∑ ]: muted (%volume)"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}
